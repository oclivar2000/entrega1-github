<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Carrito de Compras</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Tu Carrito</h1>

  <% if (carrito.length === 0) { %>
    <p>Tu carrito está vacío.</p>
  <% } else { %>
    <table border="1">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th>Subtotal</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0; %>
        <% carrito.forEach(item => { %>
          <% const subtotal = item.producto.precio * item.cantidad; %>
          <% total += subtotal; %>
          <tr>
            <td><%= item.producto.nombre %></td>
            <td>$<%= item.producto.precio %></td>
            <td><%= item.cantidad %></td>
            <td>$<%= subtotal %></td>
            <td>
              <!-- Botón para restar uno -->
              <form action="/restar/<%= item.producto.id %>" method="POST" style="display:inline;">
                <button type="submit">-</button>
              </form>
              <!-- Botón para sumar uno -->
              <form action="/agregar/<%= item.producto.id %>" method="POST" style="display:inline;">
                <button type="submit">+</button>
              </form>
              <!-- Botón para eliminar producto completamente -->
              <form action="/eliminar/<%= item.producto.id %>" method="POST" style="display:inline;">
                <button type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <h3>Total: $<%= total %></h3>
  <% } %>

  <a href="/">← Volver a la tienda</a>
</body>
</html>
